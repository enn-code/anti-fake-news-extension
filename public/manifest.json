{
  "manifest_version": 2,
  "name": "News Analyser",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "description": "Analyses and rates articles so that you can make a better judgement on whether it is trustworthy and worth your time.",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
   "128": "logo192.png"
  }
}